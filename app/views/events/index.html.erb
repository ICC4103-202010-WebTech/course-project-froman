<p id="notice"><%= notice %></p>

<div class="row ml-0 mt-3">
  <h3>Created Events</h3>
</div>

<div class="row">
  <% @events.each do |event| %>
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <%= image_tag("thumbnail.svg", class: "card-img-top", width: "100%", background: "#55595c", color: "#eceeef") %>
        <div class="card-body">
          <p class="card-text"><%= link_to event.name, event %></p>
          <p class="card-text"><%= event.date %></p>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "View", event %></button>
              <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit", edit_event_path(event) %></button>
              <!-- <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Delete", event, method: :delete, remote: true%></button> -->
            </div>
            <!-- <small class="text-muted"><%= "#{(event.date.to_date - DateTime.now.to_date).to_i} days left!" %></small> -->
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Back', :back %></button>
