<div class="row ml-0">
  <%= form_with model: @event, local: true do |form| %>
    <%= errors_for @event %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :date %>
      <%= form.text_field :date, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :Make_private %>
      <%= form.check_box :privacy, {}, 1, 0 %>
    </div>
    <div class="form-group">
      <%= form.label :Event_image %>
      <%= form.file_field :image, class: "form-control-file" %>
    </div>
    <% if action_name == 'new' %>
      <%= form.hidden_field :creator, value: @current_user %>
      <%= form.hidden_field :creator_type, value: "User" %>
    <% end %>
    <div class="form-group mt-2">
      <%= form.submit submit_btn_text, class: ["btn", "btn-primary"] %>
      <%= link_to "Back", :back, class: ["btn", "btn-secondary"] %>
    </div>
  <% end %>
</div>
