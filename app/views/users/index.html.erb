<div class="row ml-0 mt-3">
  <h4>Users</h4>
</div>
<form class="form-inline mr-3" id="search_form">
  <input class="form-control mr-sm-2" id="search_box" type="search" placeholder="Search" aria-label="Search">
  <button class="btn btn-outline-success my-2 my-sm-0" id="search_users_button" type="submit">Search</button>
</form>
<div class="row ml-0">
  <div class="row ml-0 mt-3">
    <table class="table">
      <thead>
      <tr>
        <th scope="col">Username</th>
        <th scope="col">Name</th>
        <% if admin_signed_in? %>
          <th scope="col">Action</th>
        <% end %>
      </tr>
      </thead>
      <tbody>
      <% @users.each_with_index do |user| %>
        <tr>
          <td><%= link_to user.username, user_path(user.id) %></td>
          <td><%= user.name %> <%= user.lastName %></td>
          <% if admin_signed_in? %>
            <td><button type="button" class="btn btn-sm btn-outline-danger"><%= link_to "Delete", user, method: :delete, data: {confirm: "Are you sure?"}, remote: true %></button></td>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row ml-0 mt-3">
  <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Back', root_path %></button>
</div>
