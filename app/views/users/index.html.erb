<div class="row ml-0 mt-3">
  <h4>Users</h4>
</div>
<div class="row ml-0">
  <div class="row ml-0 mt-3">
    <table class="table">
      <thead>
      <tr>
        <th scope="col">Username</th>
        <th scope="col">Name</th>
        <% if admin_signed_in? %>
          <th scope="col">Action</th>
        <% end %>
      </tr>
      </thead>
      <tbody>
      <% @users.each_with_index do |user| %>
        <tr>
          <td><%= link_to user.username, user_path(user.id) %></td>
          <td><%= user.name %> <%= user.lastName %></td>
          <% if admin_signed_in? %>
            <td><button type="button" class="btn btn-sm btn-outline-danger"><%= link_to "Delete", current_user, method: :delete, remote: true %></button></td>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Back', root_path %></button>