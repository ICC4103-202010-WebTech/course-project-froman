<div class="row ml-0 m-3">
<%= form_with model: [@event, @invitation], local: true do |form| %>
  <%= errors_for @invitation %>
  <div class="form-group">
    <%= form.label :Who_are_you_inviting? %><br>
    <%= form.select :user_id, options_for_select(User.where.not(id: (Invitation.where(event_id: @event.id).pluck("user_id"))).pluck(:username, :id))%>
  </div>
  <div class="form-group">
    <%= form.hidden_field :host, value: 0 %>
  </div>
  <div class="form-group mt-2">
    <%= form.submit "Invite", class: ["btn", "btn-primary"] %>
    <%= link_to "Back", :back, class: ["btn", "btn-secondary"] %>
  </div>
<% end %>
</div>
