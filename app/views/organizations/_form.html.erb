<div class="row ml-0">
  <%= form_with model: @organization, local: true do |form| %>
    <%= errors_for @organization %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :Organization_image %>
      <%= form.file_field :org_image, class: "form-control-file" %>
    </div>

    <%=form.fields_for :organization_roles do |organization_role_form| %>
      <div class="form-group">
        <%= organization_role_form.hidden_field :role, value: 1 %>
      </div>
    <% end %>

    <div class="form-group mt-2">
      <%= form.submit submit_btn_text, class: ["btn", "btn-primary"] %>
      <%= link_to "Back", :back, class: ["btn", "btn-secondary"] %>
    </div>
  <% end %>
</div>
